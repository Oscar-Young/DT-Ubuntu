#!/bin/bash

nc -w 2 -z ds01 22
[ "$?" != "0" ] && echo "ds01 not found" && exit;

echo "--- gw ---"
for user in user01 user02 user03 user04 user05 user06 user07 user08 user09 user10 
do
  id -u $user &>/dev/null
  [ "$?" != 0 ] && echo "$user...not found" && continue
  sudo deluser --remove-home $user &>/dev/null && echo "$user...del"
done

echo "---ds01---"
for user in user01 user02 user03 user04 user05 user06 user07 user08 user09 user10 
do
  ssh ds01 "id -u $user &>/dev/null"
  [ "$?" != 0 ] && echo "$user...not found" && continue
  ssh ds01 "sudo deluser $user &>/dev/null" && echo "$user...del"
done

echo "---ds01---"
for user in user01 user02 user03 user04 user05 user06 user07 user08 user09 user10 
do
  ssh mas01 "hdfs dfs -rm -r /user/$user"
  
done